CXX       = g++
CXXFLAGS  = -c -std=c++14
LDFLAGS   =
BDIR      = build
VPATH     = src src/tools src/Match src/Match/Base src/Lex src/Gen src/Syntax src/Parse src/Grammar
SOURCES   = Compiler.cpp  Seperate.cpp Locale.cpp Templates.cpp Lex.cpp \
            Language.cpp grammar.cpp \
            Statements.cpp TokenParsers.cpp tools.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
EXECUTABLE= $(BDIR)/Compiler

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
