CXX       = g++
CXXFLAGS  = -c -Wall -std=c++14
LDFLAGS   =
BDIR      = build
VPATH     = src src/Utilities/IO src/Utilities/Parse/Base src/Utilities/Lex src/Utilities/Gen src/Utilities/Syntax src/Utilities
SOURCES   = Compiler.cpp IO.cpp Seperate.cpp Locale.cpp Templates.cpp Lex.cpp Gen.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
# OBJECTS   =
EXECUTABLE= $(BDIR)/Compiler

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
