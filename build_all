CXX       = g++
CXXFLAGS  = -c -std=c++14
LDFLAGS   =
BDIR      = build
VPATH     = src src/IO src/Parse/Base src/Lex src/Gen src/Syntax
SOURCES   = Compiler.cpp IO.cpp Seperate.cpp Locale.cpp Templates.cpp Lex.cpp Gen.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
# OBJECTS   =
EXECUTABLE= $(BDIR)/Compiler

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
