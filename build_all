CXX       = g++
CXXFLAGS  = -c -std=c++14
LDFLAGS   =
BDIR      = build
VPATH     = src src/Match src/IO src/Match/Base src/Lex src/Gen src/Syntax src/Parse
SOURCES   = Compiler.cpp IO.cpp Seperate.cpp Locale.cpp Templates.cpp Lex.cpp \
            Gen.cpp ToStatements.cpp Parse.cpp Language.cpp StatementResult.cpp \
            Statements.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
EXECUTABLE= $(BDIR)/Compiler

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
