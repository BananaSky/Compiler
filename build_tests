CXX       = g++
CXXFLAGS  = -c -Wall -std=c++14
LDFLAGS   =
BDIR      = tests/build
VPATH     = tests src src/Utilities/Parser src/Utilities/IO src/Utilities/Parser/ParserBase src/Utilities/Lexer src/Utilities/Generator  src/Utilities/Syntax
SOURCES   = parse_tests.cpp Seperate.cpp suite.cpp Locale.cpp Templates.cpp Lexer.cpp parse_math.cpp Generator.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
# OBJECTS   =
EXECUTABLE= $(BDIR)/suite

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
