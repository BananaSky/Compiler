CXX       = g++
CXXFLAGS  = -c -Wall -std=c++14
LDFLAGS   =
BDIR      = tests/build
VPATH     = tests src src/Utilities/Parser src/Utilities/IO src/Utilities/Parser/ParserBase
SOURCES   = parse_test.cpp Seperate.cpp suite.cpp Locale.cpp Templates.cpp
EXECUTABLE= $(BDIR)/suite
OBJECTS   = $(SOURCES:.cpp=.o)

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(SOURCES:%.cpp=$(BDIR)/%.o) -o $@


.cpp.o:
	$(CXX) $(CXXFLAGS) $< -o $(BDIR)/$@
