CXX       = g++
CXXFLAGS  = -c -Wall -std=c++14
LDFLAGS   =
BDIR      = tests/build
VPATH     = tests src src/Utilities/Parser src/Utilities/IO
SOURCES   = parse_test.cpp Parse.cpp Parser.cpp
OBJECTS   = $(SOURCES:.cpp=.o)
EXECUTABLE= $(BDIR)/suite

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(SOURCES:%.cpp=$(BDIR)/%.o) -o $@


.cpp.o:
	$(CXX) $(CXXFLAGS) $< -o $(BDIR)/$@
