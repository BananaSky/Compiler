CXX       = g++
CXXFLAGS  = -c -Wall -std=c++14
LDFLAGS   =
BDIR      = tests/build
VPATH     = tests src src/IO src/Match/Base src/Match src/Lex src/Gen  src/Syntax src/Parse
SOURCES   = parse_tests.cpp Seperate.cpp suite.cpp Locale.cpp Templates.cpp \
			Lex.cpp parse_math.cpp token_parse_tests.cpp \
			lex_tests.cpp Parse.cpp ToStatements.cpp Language.cpp \
                        StatementResult.cpp Statements.cpp
OBJECTS   = $(SOURCES:%.cpp=$(BDIR)/%.o)
# OBJECTS   =
EXECUTABLE= $(BDIR)/suite

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $@

$(BDIR)/%.o: %.cpp
	$(CXX) $(CXXFLAGS) $< -o $@
