$condition = 0 0
$ifbody = 1
$elsebranchbody = 2
defines
header

if ( $condition )
{
sep newline $ifbody @;
}
branch nonempty $elsebranchbody
else
{
sep newline $elsebranchbody @;
}
end

source

if ( $condition )
{
sep newline $ifbody @;
}
branch nonempty $elsebranchbody
else
{
sep newline $elsebranchbody @;
}
end
