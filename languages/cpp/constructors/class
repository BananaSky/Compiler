template <
sep , $auxillaryargs typename&T_@
>
class 
format $name __@__
if nonempty $inheritance
: 
sep , $inheritance public&T_@ 
endif
{
public:
sep ^ $members T_@&@;
format $name __@__
(
sep , $auxillaryargs T_@&set_@
)
if nonempty $inheritance
: 
sep , $inheritance T_@(set_@) 
endif
{
sep & $members @=set_@;
}

sep ;^ $body

};

