$identifier = 0 0
$args = 1
$body = 2
defines
header
    branch equalTo $identifier main
        // No main definition required
    elsebranch
        branch nonempty $args
            template <
            sep , $args typename-T_@
            >
        end

        auto $identifier (
        sep , $args T_@-@
        )
        {
        sep newline; $body
        }
    end
source
    branch equalTo $identifier main
        int main(int argc, char ** argv)
        {
        sep newline; $body
        }
    elsebranch
        // No source for non-main functions 
    end
